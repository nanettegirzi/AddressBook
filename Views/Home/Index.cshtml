@{
  Layout="Shared/_Layout.cshtml";
}
    <h1>My Contact List</h1>
    <hr>

    @if(@Model.Count == 0)
    {
        <h3>Contact List is Empty</h3>
    }
    else
    {
    <ul>
      @foreach(var contact in Model)
      {
        <li><a href="/contacts/details/@contact.GetId()">@contact.GetFirstName() @contact.GetLastName()</a></li>
      }
    </ul>
    }
    <p><a href="/contacts/new">Add a new contact</a></p>
    <br>
    <form action="/contacts/delete" method="post">
        <button type="submit" name="button">Clear All Contacts</button>
    </form>
